{{ range . -}}
provider "ns" {
  capability_id = {{ .Id }}
  alias         = "cap_{{ .Id }}"
}

module "cap_{{ .Id }}" {
  source  = "{{ .Source }}"
  version = "{{ .SourceVersion }}"

  {{- range $key, $value := .Variables }}
  {{ if not $value.Unused -}}
  {{ $key }} = jsondecode({{ $value.Value | to_json }})
  {{- end }}{{ end }}

  providers = {
    ns = ns.cap_{{ .Id}}
  }
}
{{ end }}
module "caps" {
  source  = "nullstone-modules/cap-merge/ns"
  modules = [local.default_capability{{ range $index, $element := . }}, module.cap_{{ $element.Id }}{{ end }}]
}

locals {
  default_capability = {
    security_group_rules = []
    env                  = []
    secrets              = []
    load_balancers       = []
    log_configurations   = []
  }
  capabilities = module.caps.outputs
}
